<% form_for @user, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :client %><br />
    <%= f.text_field :client %>
  </p>
  <p>
    <%= f.label :linkedin_url %><br />
    <%= f.text_field :linkedin_url %>
  </p>
  <p>
    <%= f.label :degree %><br />
    <%= f.text_field :degree %>
  </p>
  <% if session[:user] and session[:user].administrator %>
  <p>
    <%= f.label :administrator %><br />
    <%= f.check_box :administrator %>
  </p>
  <% end %>
  <p>
    <% if $ENABLE_BUSINESSCARD %>
    <%= f.label :hide_business_card  %>
    <br />
    <%= f.check_box :hide_business_card %>
    <% end %>
    
  </p>
  <p>
    <%= f.label :photo %><br />
    <%= image_tag @user.photo.url(:businesscard) if @user.photo_file_name %><br/>
    <%= f.file_field :photo %>
  </p>


      
  <p>
    <%= f.submit t :continue %>
  </p>
<% end %>
