<% width ||= '500' -%>
<% height ||= '250' -%>
<div style="width:<%= width %>px; height:<%= height %>px" id="map_<%= @user.id %>">Map</div>
<script type="text/javascript" charset="utf-8">
  var loc = {"lat":"<%= @user.latitude %>","lng":"<%= @user.longitude %>"};
  var latlng = new google.maps.LatLng(loc.lat, loc.lng);
  var myOptions = {
    zoom: 14,
    center: latlng,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };
  var map = new google.maps.Map(document.getElementById("map_<%= @user.id %>"), myOptions);
  var marker = new google.maps.Marker({
        position: latlng, 
        map: map
    });
</script>